{% block script %} 
<script type="text/javascript">


$(document).ready(function(){

    var url = "{{ base_url() }}/../storage/ip/suites/suites.json";
    var data = 'test';
    var rooms = [];
    $.ajax({
        dataType: "json",
        url: url,
        data: data,
        success: function (result) {
            rooms = result;
            console.log(result);
             $('#room').select2({
                 data: rooms
             });

        }
        });


$(document).on('click', '#reboot_room', function (e){
    e.preventDefault();
    var room =  $('#room').val();
    console.log(room);
    rebootRoom(room);
});


$(document).on('click', '#ping', function (e){
    e.preventDefault();
    var room =  $('#room').val();
    console.log(room);
    ping(room);
    //rebootRoom(room);
});

function rebootRoom(ip){
        $.ajax({
        dataType: "json",
        url: '{{ path_for("reboot.suites.ap") }}',
        method: "POST",
        data: {
            'ip' : ip
        },
        success: function (result) {
            console.log(result);
        }
        });
}

function ping(ip){
        $.ajax({
        dataType: "json",
        url: '{{ path_for("ping.suites.ap") }}',
        method: "POST",
        data: {
            'ip' : ip
        },
        success: function (result) {
            console.log(result);
        }
        });
}

})

</script>

