{% extends 'app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6">

                <form class="form" method="POST" action="">
                    <div class="form-group">
                    <label for="room">Beach Rooms</label>
                    <select id="room" name="room" class="form-control">
                        <option></option>
                    </select>
                    </div>
                    <button type="submit" class="btn btn-primary mb-1" id="reboot_room">Reboot</button>
                    <button type="submit" class="btn btn-primary mb-1" id="ping">Ping </button>
                    <button type="submit" class="btn btn-primary mb-1" disabled="" id="ping-t">Ping -t</button>
                </form>
        </div>
                
    </div>

    <div class="row">
        <div class="col-md-6">
        <h4></h4>
        <h5 id="contact-it"></h5>
        </div>
    </div>


{% endblock %}


{% block script %} 
<script type="text/javascript">


$(document).ready(function(){

    var url = "{{ base_url }}/ip/beach/beach.json";
    var data = 'test';
    var rooms = [];
    $.ajax({
        dataType: "json",
        url: url,
        data: data,
        success: function (result) {
            rooms = result;
             $('#room').select2({
                placeholder: "Select a room",
                allowClear: true,
                 data: rooms
             });

        }
        });


$(document).on('click', '#reboot_room', function (e){
    e.preventDefault();
    var room =  $('#room').val();

    //what if i ping a device to reboot it and it's not online
    ping(room).then(function (result){

         console.log('start repeat pinging'); 
        return rebootRoom(room);
           
        
    }).then(function(result){
      
        console.log('start repeat pinging');    
      repeatPing(room);

    }).then(function (result) {
       console.log('Ping pass');
    }).catch(function (result) {
        //repeatPing(result);
        $('h4').html('Device is unreachable');
        console.log('Ping fail');
    })
    
    
});


$(document).on('click', '#ping', function (e){
    e.preventDefault();
    var room =  $('#room').val();

    ping(room).then(function (result) {

        if (parseInt(result.message)) {

            $('h4').html('Device is online');
        }else{

            $('h4').html('Device is unreachable');
        }
            
    }).catch(function (result) {
            
          console.log('Ping fail');
    
     });
        
    
});

function rebootRoom(ip){
    $('h4').html('Rebooting room');
    return new Promise(function(resolve, reject,){
        $.ajax({
        dataType: "json",
        url: '{{ path_for("reboot.beach.ap") }}',
        method: "POST",
        data: {
            'ip' : ip
        },
        success: function (result) {
            console.log(result);
            resolve(result);
        },
        err: function (result) {
            reject(result);
        }
        });
    });
}

function ping(ip){

    $('h4').html('Pinging room');
    return new Promise(function(resolve, reject){
        var pingStatus = false; 
        $.ajax({
        dataType: "json",
        url: '{{ path_for("ping.beach.ap") }}',
        method: "POST",
        data: {
            'ip' : ip
        },
        success: function (result) {
           
            
        if (parseInt(result.message)) {
            $('h4').html('Device is online');
            resolve(result);
        }else{

            $('h4').html('Device is unreachable');
            reject(result)
        }
        },
        err: function(err){
            reject(err)
        } 
        });
    })
    
}


function repeatPing (ip) {
        console.log("Starting Interval");
        let pingCount = 0;
        return new Promise(function (resolve, reject) {
        let interval = setInterval(function () {
            pingCount++;
            
                      
            ping(ip).then(function (result) {
            
                console.log("Clearing interval");
                clearInterval(interval);
                resolve();

            }).catch(function (result) {
            
                console.log('Ping fail');
                if(pingCount >= 7){

                    $('#contact-it').html('Please contact I.T or Reboot Room Manually');
                    console.log("Clearing interval");
                    clearInterval(interval);
            }
            })

        }, 15000)
        
    })
}


})

</script>

{% endblock %}
